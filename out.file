*, *::before, *::after {
    box-sizing: border-box;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-weight: normal;
}

body {
     padding: 0;
     margin: 0;
     background: linear-gradient(to left, #00AAFF, #00FF6C);
}

.calculator-grid {
    display: grid;
    justify-self: center;
    
}